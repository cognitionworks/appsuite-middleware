<#macro render key value title>
	<#if value != "">
		<div class="group">
			<div class="key co_4">
				<span class="key">
					${title}:
				</span>
			</div>
			<div class="co_12">
				<span class="${key} value">
					<#if key=="ox_comment"><pre></#if>${value?html}<#if key=="ox_comment"></pre></#if>
				</span>
			</div>
		</div>
	</#if>
</#macro>

<#macro render_scalar key value title>
<div class="group">
	<div class="key co_4">
		<span class="key">
			${title}:
		</span>
	</div>
	<div class="co_12">
		<span class="${key} value">
			${value?html}
		</span>
	</div>
</div>
</#macro>

<#macro fileMicroformatted infoitem>
	<div class="group">
		<div class="key co_4">
			<span class="key"></span>
		</div>
		<div class="co_12">
			<span class="">
				<a class="ox_file button btn" href="${utils.getScheme(request)!"http"}${request.serverName}${utils.getFileURL(publication, infoitem)}"  >Download</a>
			</span>
		</div>
	</div>
</#macro>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
