<project name="openexchange-test" default="jar" basedir=".">

  <property name="src" value="src"/>
  <property name="build" value="bin"/>
  <property name="lib" value="lib"/>
  <property name="test.xml.dir" location="test-results" />
  <property name="conf.dir" location="conf" />
  <property name="build.compiler" value="modern"/>
  <path id="project.classpath"> 
		<pathelement location="${lib}/junit.jar"/>
		<pathelement location="${lib}/commons-httpclient-3.0.1.jar"/>
		<pathelement location="${lib}/logging.jar"/>
		<pathelement location="${lib}/jsdk.jar"/>
		<pathelement location="${lib}/activation.jar"/>
		<pathelement location="${lib}/mail.jar"/>
		<pathelement location="${lib}/jdom.jar"/>
		<pathelement location="${lib}/comfiretools.jar"/>
		<pathelement location="${lib}/ajax.jar"/>
		<pathelement location="${lib}/nas.jar"/>
		<pathelement location="${lib}/intranet.jar"/>
		<pathelement location="${lib}/sessiond.jar"/>
		<pathelement location="${lib}/webdav.jar"/>
		<pathelement location="${lib}/httpunit.jar"/>
		<pathelement location="${lib}/js.jar"/>
		<pathelement location="${lib}/servlet.jar"/>
		<pathelement location="${lib}/Tidy.jar"/>
		<pathelement location="${lib}/xercesImpl.jar"/>
		<pathelement location="${lib}/xmlParserAPIs.jar"/>
		<pathelement location="${lib}/nekohtml.jar"/>
		<pathelement location="${lib}/commons-logging.jar"/>
		<pathelement location="${lib}/json.jar"/>
		<pathelement location="${lib}/commons-fileupload.jar"/>
		<pathelement location="${lib}/commons-io.jar"/>
		<pathelement location="${lib}/jdom.jar" />
		<pathelement location="${lib}/jcs-1.2.7.3.jar" />
		<pathelement location="${lib}/concurrent.jar" />
		
	</path>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
    <mkdir dir="${lib}"/>
  </target>

  <target name="compile" depends="init">
    <mkdir dir="${build}"/>
    <mkdir dir="${lib}"/>
    <javac srcdir="${src}" destdir="${build}" optimize="no" debug="yes" encoding="UTF-8">
		<classpath refid="project.classpath" />
	</javac>
  </target>
  
  <target name="junit" depends="jar">
	<junit printsummary="on" showoutput="on" failureproperty="on">
	  <formatter type="plain" usefile="off"/>
	  <test name="com.openexchange.groupware.ldap.OffspringTest"/>
	  <!--test name="com.openexchange.groupware.ldap.UserGroupHandleTest"/>
	  <test name="com.openexchange.groupware.ldap.ResourcesHandleTest"/-->
	  <classpath>
		<path refid="project.classpath" />
		<pathelement location="openexchange-test.jar"/>
      </classpath>
	</junit> 
  </target>

  <target name="jar" depends="compile">
    <jar jarfile="openexchange-test.jar" basedir="${build}" includes="**"/>
  </target>
  
  
  <target name="cc-test" depends="jar"> 
	<delete dir="${test.xml.dir}"/> 
	<mkdir dir="${test.xml.dir}"/> 
	<junit errorProperty="test.failed" failureProperty="test.failed"> 
		<classpath>
			<path refid="project.classpath" />
			<pathelement location="${lib}/mysql.jar" />
			<pathelement location="openexchange-test.jar"/>
    	</classpath>
		
		<!-- Server Internals -->
		<test name="com.openexchange.sessiond.SessiondTest" todir="${test.xml.dir}" />
		<test name="com.openexchange.groupware.IDGeneratorTest" todir="${test.xml.dir}" />
		<test name="com.openexchange.groupware.CalendarTest" todir="${test.xml.dir}" />
		<!-- test name="com.openexchange.groupware.reminder.ReminderTest" todir="${test.xml.dir}" /-->
		
		
		<!-- AJAX Interface -->
		<test name="com.openexchange.ajax.FolderTest" todir="${test.xml.dir}" />
		<test name="com.openexchange.ajax.TasksTest" todir="${test.xml.dir}" />
		<test name="com.openexchange.ajax.ReminderTest" todir="${test.xml.dir}" />
		<test name="com.openexchange.ajax.infostore.InfostoreAJAXSuite" todir="${test.xml.dir}"/>
		<test name="com.openexchange.ajax.ConfigMenuTest" todir="${test.xml.dir}" />
		<!--test name="com.openexchange.ajax.ParticipantTest" todir="${test.xml.dir}" />
		<test name="com.openexchange.ajax.ContactTest" todir="${test.xml.dir}" />
		<test name="com.openexchange.ajax.AppointmentTest" todir="${test.xml.dir}" /-->
		
		<!-- Webdav Interface -->
		<!-- test name="com.openexchange.webdav.xml.AppointmentTest" todir="${test.xml.dir}" /-->
		
		
		
		<!--test name="com.openexchange.cruisecontrol.FaillingTest" todir="${test.xml.dir}" /-->
		
		<formatter type="brief" usefile="false" /> 
		<formatter type="xml" /> 
		<sysproperty key="test.propfile" value="${conf.dir}/test.properties" /> 
	</junit> 
	<fail message="Tests failed! Check test reports." if="test.failed" /> 
	</target> 
  

  <target name="clean">
    <delete dir="${build}"/>
    <delete file="openexchange-test.jar"/>
  </target>

</project>


