<?xml version="1.0" encoding="UTF-8"?>
<project name="rest_client" default="download_check_and_add_rest_jar" basedir=".">
    <description>
        Enhances test libs by the rest client
    </description>
	
    <import file="main.xml" />

	<property name="tmp_dir" value="rest_tmp" />

	<property name="rest.jar.url" value="https://artifactory.open-xchange.com/artifactory/qa/com/openexchange/testing/restClient-java/develop-SNAPSHOT/restClient-java-develop-SNAPSHOT.jar" />
	<property name="rest.jar.url.source" value="https://artifactory.open-xchange.com/artifactory/qa/com/openexchange/testing/restClient-java/develop-SNAPSHOT/restClient-java-develop-SNAPSHOT-sources.jar" />

    <target name="download_check_and_add_rest_jar">
        <antcall target="download_check_and_add_jar">
            <param name="jar.url" value="${rest.jar.url}" />
			<param name="dest.loc" value="lib" />
        </antcall>
		<antcall target="download_check_and_add_jar">
			<param name="jar.url" value="${rest.jar.url.source}" />
			<param name="dest.loc" value="lib/source" />
		</antcall>
        <delete dir="${tmp_dir}" verbose="true"/>
    </target>

</project>
