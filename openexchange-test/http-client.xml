<?xml version="1.0" encoding="UTF-8"?>
<project name="http_client" default="download_check_and_add_http_jar" basedir=".">
	<description>
        Enhances test libs by the http client
    </description>

    <import file="main.xml" />

    <property name="tmp_dir" value="http_tmp" />

	<property name="http.jar.url" value="https://artifactory.open-xchange.com/artifactory/qa/com/openexchange/testing/httpClient-java/develop-SNAPSHOT/httpClient-java-develop-SNAPSHOT.jar" />
	<property name="http.jar.url.source" value="https://artifactory.open-xchange.com/artifactory/qa/com/openexchange/testing/httpClient-java/develop-SNAPSHOT/httpClient-java-develop-SNAPSHOT-sources.jar" />

	<target name="download_check_and_add_http_jar">
		<antcall target="download_check_and_add_jar">
			<param name="jar.url" value="${http.jar.url}" />
			<param name="dest.loc" value="lib" />
		</antcall>
		<antcall target="download_check_and_add_jar">
			<param name="jar.url" value="${http.jar.url.source}" />
			<param name="dest.loc" value="lib/source" />
		</antcall>
		<delete dir="${tmp_dir}" verbose="true" />
	</target>

</project>
