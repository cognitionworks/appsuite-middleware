#!/bin/bash
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

CONFFILES="AdminDaemon.properties Group.properties ModuleAccessDefinitions.properties mpasswd Resource.properties RMI.properties Sql.properties User.properties plugin/hosting.properties"

for FILE in $CONFFILES; do
   dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/admindaemon/$FILE \
        /opt/open-xchange/etc/$FILE 6.20.99 open-xchange-admin -- $1 \
        $(dpkg-query -W -f='${Config-Version}' open-xchange-admin)
done


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
