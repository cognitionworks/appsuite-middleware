#!/usr/bin/perl -w
#%# family=auto
#%# capabilities=autoconf

$showruntimestats="/opt/open-xchange/sbin/showruntimestats";
$showexec="$showruntimestats -z";

if ( $ARGV[0] and $ARGV[0] eq "autoconf")
{
	if (-x $showruntimestats) {
		print "yes\n";
		exit 0;
	}
	else {
		print "no\n";
		exit 0;
	}
}

# collectionTime: the overall time (in ms) currently used from the garbage collector

if ( $ARGV[0] and $ARGV[0] eq "config")
{
	print "graph_title JVM GC CollectionTime\n";
	print "graph_args --base 1024 -l 0\n";
	print "graph_category Open Xchange\n";
	print "graph_vlabel CollectionTime\n";
	print "a.label ConcurrentMarkSweep\n";
	print "a.draw LINE1\n";
	print "b.label ParNew\n";
	print "b.draw LINE1\n";
	exit 0
}
									

open(SHOWRUNTIME,"$showexec |") || die "can not read monitoring output";   

while (<SHOWRUNTIME>)
{
	if ( $_ =~ /ConcurrentMarkSweep,type=GarbageCollector,CollectionTime /) {
		s/.*\=//; 
		s/].*//;
		$val=$_+0;
		print "a.value $val\n";
		next;
	}
	if ( $_ =~ /ParNew,type=GarbageCollector,CollectionTime /) {
		s/.*\=//; 
		s/].*//;
		$val=$_+0;
		print "b.value $val\n";
		next;
	}
}

close (SHOWRUNTIME);
