#!/usr/bin/perl -w
#%# family=auto
#%# capabilities=autoconf


$showruntimestats="/opt/open-xchange/sbin/showruntimestats -x";


if ( $ARGV[0] and $ARGV[0] eq "autoconf")
{
	if (-x $showruntimestats) {
		print "yes\n";
		exit 0;
	}
	else {
		print "no\n";
	exit 1;
	}
}

if ( $ARGV[0] and $ARGV[0] eq "config")
{
	print "graph_title Java Heap\n";
	print "graph_args --base 1024 -l 0\n";
	print "graph_category Open Xchange\n";
	print "graph_vlabel \n";
	print "a.label Old Gen\n";
	print "a.draw AREA\n";
	print "b.label Survivor\n";
	print "b.draw STACK\n";
	print "c.label Eden Space\n";
	print "c.draw STACK\n";
	exit 0
}
									

open(SHOWRUNTIME,"$showruntimestats |") || die "can not read monitoring output";   

while (<SHOWRUNTIME>)
{
	if ( $_ =~ /Old Gen,type=MemoryPool,Usage /) {
		s/.*\=//; 
		s/].*//;
		$val=$_+0;
		print "a.value $val\n";
		next;
	}
	if ( $_ =~ /Survivor Space,type=MemoryPool,Usage /) {
		s/.*\=//; 
		s/].*//;
		$val=$_+0;
		print "b.value $val\n";
		next;
	}
	if ( $_ =~ /Eden Space,type=MemoryPool,Usage /) {
		s/.*\=//; 
		s/].*//;
		$val=$_+0;
		print "c.value $val\n";
		next;
	}
}

close (SHOWRUNTIME);
