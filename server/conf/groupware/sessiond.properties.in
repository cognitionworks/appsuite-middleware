#
# sessiond.properties
#

# session container timeout in milliseconds. After this time session container
# are rotaded, which means the oldest one will be destroyed and a new one gets
# created.
com.openexchange.sessiond.sessionContainerTimeout:4200000
	
# number of session container
com.openexchange.sessiond.numberOfSessionContainers:8

# maximum number of concurrent sessions, 0 stands for unlimited
com.openexchange.sessiond.maxSession:5000

# maximum number of concurrent sessions per user, a value less than or equal to zero means unlimited
com.openexchange.sessiond.maxSessionPerUser:100

# maxiumum value in milliseconds a session is allowed to be kept without 
# request.
com.openexchange.sessiond.sessionDefaultLifeTime:3600000

# The configuration file for session cache
com.openexchange.sessiond.sessionCacheConfig:@oxgroupwaresysconfdir@/sessioncache.ccf

# Whether autologin is allowed or not
com.openexchange.sessiond.autologin:false

# Session and secret cookie TTL, relevant only if autologin is enabled as well.
# Can contain units of measurement: D (=days) W(=weeks) h(=hours).
com.openexchange.sessiond.cookie.ttl:1W
