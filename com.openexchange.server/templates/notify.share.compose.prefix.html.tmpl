<#include "notify.common.button.tmpl">

<style>
    body {
        font-family: -apple-system, BlinkMacSystemFont,
            "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell",
            "Fira Sans", "Droid Sans", "Helvetica Neue", Arial, sans-serif;
        font-size: 16px;
        margin: 16px;
    }

    .wrap {
        position: absolute;
        left: 0;
        right: 0;
        padding: 10px;
    }

    .container {
        padding: 16px;
        border-radius: 4px;
        background-color: f5f5f5;
        color: #424242;
        border: 1px solid #eee;
        margin: 0 auto;
        max-width: 700px;
    }

    hr {
        width: 60%;
        border: none;
        height: 1px;
        background-color: #9e9e9e;
        margin: 24px auto;

    }

    .base,
    .base table {
        border-spacing: 0;
        border-collapse: collapse;
    }
    .base td,
    .base th {
        padding: 0;
    }

    .item {
      border: 8px solid transparent;
      vertical-align: top;
    }

    .item-image {
        display: block;
        border: 0;
        max-width: 100%;
    }

    .base-row {
        vertical-align: top;
        margin: auto;
    }

    .base .item-text {

        font-size: 12px;
        padding-top: 10px;
        text-align: center;
        max-width: 100px;
        text-overflow: ellipsis;
        overflow: hidden;
        font-weight: bold;
        color: #555;
    }

    .item-row {
        vertical-align: top;
    }

    .item-image {
       -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
    }

    /* space equally shared */
    @media only screen and (max-width : 768px) {
        .item {
            width: 15%;
            max-width: 100%;
        }
    }

    /* two column grid */
    @media only screen and (max-width : 480px) {
        .item {
            width: 50%;
            float: left;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
        }
        .item table,
        .item-image {
            width: 100%;
        }
        .wrap {
            padding: 8px;
        }
    }

    /* one column list */
    @media only screen and (max-width : 320px) {
        .base .item {
            width: 100%;
            display: block;
            float: none;
            border-left: 0;
        }
        .item-row {
            display: table-cell;
            width: 60%;
        }
        .item-row:first-child {
            width: 40%;
        }
        .base .item-text {
            padding-left: 8px;
        }
        body {
            margin: 12px;
        }
        .wrap {
            padding: 4px;
        }
    }
</style>

<div class="wrap">
    <div class="container">
        <p class="intro">
          ${intro}
        </p>
        <table class="base">
          <tr>
            <td>
              <table>
                <tr class="base-row">
                  <#list previews?keys as key>
                    <td class="item">
                      <table>
                        <tr class="item-row">
                          <td align="left"><img class="item-image" src="${previews[key]}" alt="" /></td>
                        </tr>
                        <tr class="item-row">
                          <td align="left" class="item-text">
                            ${filenames[key]}
                          </td>
                        </tr>
                      </table>
                    </td>
                  </#list>
                </tr>
              </table>
            </td>
          </tr>
        </table>
        <p style="clear:both">
          <#if more?has_content>${more}</#if>
        </p>
        <p>
          <@styledButton link=link>${link_text}</@styledButton>
        </p>
        <#if password?has_content>
          <p>
            ${password}
          </p>
        </#if>
        <#if expiration?has_content>
          <p>
            ${expiration}
          </p>
        </#if>
    </div>
</div>
