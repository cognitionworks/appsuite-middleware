#!/bin/bash
# preinst script for open-xchange-subscribe
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    install|upgrade)
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#SCR-168
dpkg-maintscript-helper rm_conffile /opt/open-xchange/etc/googlesubscribe.properties 7.10.0~ -- "$@"

#SCR-172
for x in yahoo.com.yml web.de.yml gmx.de.yml Sun\ Tasks.yml Sun\ Contacts.yml Sun\ Calendar.yml
do
  dpkg-maintscript-helper rm_conffile "/opt/open-xchange/etc/crawlers/${x}" 7.10.0~ -- "$@"
done
dpkg-maintscript-helper rm_conffile /opt/open-xchange/etc/crawler.properties 7.10.0~ -- "$@"

#SCR-316
dpkg-maintscript-helper rm_conffile /opt/open-xchange/etc/mslivesubscribe.properties 7.10.2~ -- "$@"

# SCR-322
dpkg-maintscript-helper rm_conffile /opt/open-xchange/etc/microformatSubscription.properties 7.10.2~ -- "$@"


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
