# groupware
setup_groupware() 
{
echo setting up groupware configuration ${SERVERCONF}

# this formular and parameters are from Holger
NSIZE=$(( ${SERVER_MEMORY} / 2 ))
SERVEROPTS="-Xms${SERVER_MEMORY}m -Xmx${SERVER_MEMORY}m -XX:+UseConcMarkSweepGC -XX:NewSize=${NSIZE}m -XX:MaxNewSize=${NSIZE}m -XX:SurvivorRatio=6"

GLOBIGNORE='*'
v_setprop AJP_JVM_ROUTE "$AJP_JVM_ROUTE" ${SERVERCONF}/ajp.properties
v_setprop AJP_BIND_ADDR "$AJP_BIND_ADDR" ${SERVERCONF}/ajp.properties
GLOBIGNORE=

v_setprop object_link "http://$OXOBJECT_LINK_HOSTNAME/#m=[module]&i=[object]&f=[folder]" ${SERVERCONF}/notification.properties

v_setprop URL "$URL" ${SERVERCONF}/configjump.properties

v_setprop com.openexchange.mail.credSrc "$CREDSRC" ${SERVERCONF}/mail.properties

v_setprop JAVA_XTRAOPTS "$SERVEROPTS" ${SERVERCONF}/ox-scriptconf.sh

SQLHOST=$CONFIGDB_READ
SQLPORT=$CONFIGDB_READ_PORT
EVAL_SQL_URL=$(eval echo $SQL_URL)
v_setprop readUrl $EVAL_SQL_URL ${SERVERCONF}/configdb.properties

SQLHOST=$CONFIGDB_WRITE
SQLPORT=$CONFIGDB_WRITE_PORT
EVAL_SQL_URL=$(eval echo $SQL_URL)
v_setprop writeUrl $EVAL_SQL_URL ${SERVERCONF}/configdb.properties

if [ "$CONFIGDB_READ" != "$CONFIGDB_WRITE" ]; then
    v_setprop useSeparateWrite "true" ${SERVERCONF}/configdb.properties
fi

v_setprop readProperty.1 "user=$CONFIGDB_USER" ${SERVERCONF}/configdb.properties
v_setprop readProperty.2 "password=$CONFIGDB_PASS" ${SERVERCONF}/configdb.properties

v_setprop writeProperty.1 "user=$CONFIGDB_USER" ${SERVERCONF}/configdb.properties
v_setprop writeProperty.2 "password=$CONFIGDB_PASS" ${SERVERCONF}/configdb.properties

v_setprop SERVER_NAME $SERVER_NAME ${SERVERCONF}/system.properties
v_setprop com.openexchange.mail.mailServer $IMAP_SERVER ${SERVERCONF}/mail.properties
v_setprop com.openexchange.mail.loginType  $IMAP_LOGIN_TYPE ${SERVERCONF}/mail.properties

v_setprop UPLOAD_DIRECTORY "$TMPDIR_PATH" ${SERVERCONF}/server.properties

v_setprop com.openexchange.sessiond.sessionContainerTimeout "$SESSIONCONTAINERTIMEOUT" ${SERVERCONF}/sessiond.properties
v_setprop com.openexchange.sessiond.numberOfSessionContainers "$NUMBEROFSESSIONCONTAINERS" ${SERVERCONF}/sessiond.properties
v_setprop com.openexchange.sessiond.maxSession "$MAXSESSION" ${SERVERCONF}/sessiond.properties
v_setprop com.openexchange.sessiond.isDoubleLoginPermitted "$ISDOUBLELOGINPERMITTED" ${SERVERCONF}/sessiond.properties
v_setprop com.openexchange.sessiond.sessionDefaultLifeTime "$SESSIONDEFAULTLIFETIME" ${SERVERCONF}/sessiond.properties

v_cache_hosting ${SERVERCONF}/cache.ccf
v_setprop jcs.auxiliary.LTCP.attributes.TcpListenerPort $GWCACHEPORT ${SERVERCONF}/cache.ccf

v_setprop com.openexchange.push.udp.senderAddress "$OXCLUSTERIP" ${SERVERCONF}/push.properties
v_setprop com.openexchange.push.udp.multicastAddress "$UDPDISCOVERYADDR" ${SERVERCONF}/push.properties
v_setprop com.openexchange.push.udp.multicastPort "$PUSHMCPORT" ${SERVERCONF}/push.properties
v_setprop com.openexchange.push.udp.multicastEnabled true ${SERVERCONF}/push.properties
v_setprop com.openexchange.push.udp.pushEnabled true ${SERVERCONF}/push.properties
v_setprop com.openexchange.push.udp.registerPort $OLPORT ${SERVERCONF}/push.properties
v_setprop com.openexchange.push.udp.registerDistributionEnabled false  ${SERVERCONF}/push.properties
v_setprop com.openexchange.push.udp.eventDistributionEnabled true ${SERVERCONF}/push.properties
}

#
# admin daemon
#

setup_admin()
{
echo setting up admin daemon configuration ${ADMINCONF}

v_setprop SERVER_NAME $SERVER_NAME ${ADMINCONF}/system.properties
v_setprop SERVER_NAME $SERVER_NAME ${ADMINCONF}/AdminDaemon.properties

SQLHOST=$CONFIGDB_WRITE
SQLPORT=$CONFIGDB_WRITE_PORT
EVAL_SQL_URL=$(eval echo $SQL_URL)
v_setprop readUrl $EVAL_SQL_URL ${ADMINCONF}/configdb.properties

SQLHOST=$CONFIGDB_WRITE
SQLPORT=$CONFIGDB_WRITE_PORT
EVAL_SQL_URL=$(eval echo $SQL_URL)
v_setprop writeUrl $EVAL_SQL_URL ${ADMINCONF}/configdb.properties

v_setprop useSeparateWrite "false" ${ADMINCONF}/configdb.properties

v_setprop readProperty.1 "user=$CONFIGDB_USER" ${ADMINCONF}/configdb.properties
v_setprop readProperty.2 "password=$CONFIGDB_PASS" ${ADMINCONF}/configdb.properties

v_setprop writeProperty.1 "user=$CONFIGDB_USER" ${ADMINCONF}/configdb.properties
v_setprop writeProperty.2 "password=$CONFIGDB_PASS" ${ADMINCONF}/configdb.properties

v_cache_hosting ${ADMINCONF}/cache.ccf
v_setprop jcs.auxiliary.LTCP.attributes.TcpListenerPort $AMCACHEPORT ${ADMINCONF}/cache.ccf

if [ -z "$DISABLE_RMI_AUTH" ]; then
    v_setprop MASTER_AUTHENTICATION_DISABLED false ${ADMINCONF}/AdminDaemon.properties
    v_setprop CONTEXT_AUTHENTICATION_DISABLED false ${ADMINCONF}/AdminDaemon.properties
    echo
    echo "*** RMI authentication is enabled"
    if [ -z "$MASTER_PASS" ]; then
    	die "ERROR: master password cannot be null if authentication is enabled"
    else
		echo "using $MASTER_USER as master account"
		/opt/open-xchange/sbin/generatempasswd -A $MASTER_USER \
		-f /opt/open-xchange/etc/admindaemon/mpasswd -P "$MASTER_PASS" >/dev/null
    fi
else
    v_setprop MASTER_AUTHENTICATION_DISABLED true ${ADMINCONF}/AdminDaemon.properties
    v_setprop CONTEXT_AUTHENTICATION_DISABLED true ${ADMINCONF}/AdminDaemon.properties
    echo
    echo "*** RMI authentication is disabled"
fi
}

if [ -d ${SERVERCONF} ]; then
	setup_groupware
	echo
	echo "groupware daemon must now be restarted if already running"
else
	echo ${SERVERCONF} not available skipping groupware configuration
fi

if [ -d  ${ADMINCONF} ]; then
	setup_admin
        echo "admin daemon must now be restarted if already running"
else
	echo ${ADMINCONF} not available skipping admin daemon configuration
fi
