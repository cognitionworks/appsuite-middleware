<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false" threshold="null">
    <appender name="SERVER_LOG" class="org.apache.log4j.net.SyslogAppender">
        <param name="SyslogHost" value="localhost"/>
        <param name="Facility" value="local2"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d open-xchange-groupware %-5p [%c][%t]: %C,%M %m%n"/>
        </layout>
    </appender>
    <logger name="org.apache.jcs">
        <level value="WARN"/>
    </logger>
    <!-- This option ensures, that all login relevant information is logged correctly. NEVER touch this configuration. If these values -->
    <!-- are changed Open-Xchange cannot take any responsibility for analysis of potential security breaches. -->
    <logger name="com.openexchange.login.internal.LoginPerformer">
        <level value="INFO"/> 
    </logger>
    <logger name="com.openexchange.sessiond.impl.SessionHandler">
        <level value="INFO"/> 
    </logger>
    <root>
        <level value="INFO"/>
        <appender-ref ref="SERVER_LOG"/>
    </root>
</log4j:configuration>
