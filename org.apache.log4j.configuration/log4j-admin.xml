<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false" threshold="null">
    <appender name="SERVER_LOG" class="org.apache.log4j.net.SyslogAppender">
        <param name="SyslogHost" value="localhost"/>
        <param name="Facility" value="local5"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d open-xchange-admindaemon %-5p [%c][%t]: %C,%M %m%n"/>
        </layout>
    </appender>
    <category name="org.apache.jcs">
        <level value="WARN"/>
        <appender-ref ref="SERVER_LOG"/>
    </category>
    <root>
        <level value="INFO"/>
        <appender-ref ref="SERVER_LOG"/>
    </root>
</log4j:configuration>
