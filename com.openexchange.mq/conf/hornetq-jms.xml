<configuration xmlns="urn:hornetq"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="urn:hornetq /schema/hornetq-jms.xsd">

   <!-- The connection factory -->
   <connection-factory name="ConnectionFactory">
      <connectors>
         <connector-ref connector-name="netty-connector"/>
      </connectors>
      <block-on-durable-send>false</block-on-durable-send>
      <block-on-non-durable-send>false</block-on-non-durable-send>
      <entries>
         <entry name="ConnectionFactory"/>
      </entries>
   </connection-factory>

   <!-- The general-purpose queue -->
   <queue name="genericQueue">
      <entry name="/queues/genericQueue"/>
   </queue>

   <!-- The general-purpose topic -->
   <topic name="genericTopic">
      <entry name="/topics/genericTopic"/>
   </topic>

   <!-- The topic for Open-Xchange events -->
   <topic name="oxEventTopic">
      <entry name="/topics/oxEventTopic"/>
   </topic>
   

</configuration>