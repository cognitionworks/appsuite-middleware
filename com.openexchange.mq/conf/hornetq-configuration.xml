<configuration xmlns="urn:hornetq"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="urn:hornetq /schema/hornetq-configuration.xsd">

   <!--
   		Placeholders
   		- @oxgroupwaresysconfdir@	:= Path to Open-Xchange server's configuration
   		- @serverid@				:= The unique identifier of the HornetQ's Open-Xchange server
   		- @myip@					:= The resolved IP address of the Open-Xchange server's host;
   		                               uses java.net.InetAddress.getLocalHost().getAddress();
   -->

   <!-- Clustered flag -->
   <clustered>false</clustered>

   <!-- Persistence flag -->
   <persistence-enabled>true</persistence-enabled>

   <!-- Persistence -->
   <paging-directory>@oxgroupwaresysconfdir@/data/paging</paging-directory>
   
   <bindings-directory>@oxgroupwaresysconfdir@/data/bindings</bindings-directory>
   <create-bindings-dir>true</create-bindings-dir>
   
   <journal-directory>@oxgroupwaresysconfdir@/data/journal</journal-directory>
   <create-journal-dir>true</create-journal-dir>
   <!-- 10MB by default -->
   <journal-file-size>10485760</journal-file-size>
   <!-- The minimum number of files the journal will maintain -->
   <journal-min-files>10</journal-min-files>
   <!-- Whether Java NIO or AIO (if installed on system) -->
   <journal-type>NIO</journal-type>
   <!-- For NIO, this value should always be equal to 1, for AIO, the default should be 500. -->
   <journal-max-io>1</journal-max-io>
   
   <large-messages-directory>@oxgroupwaresysconfdir@/data/large-messages</large-messages-directory>

   <!-- Connectors -->
   <connectors>
      <connector name="netty-connector">
         <factory-class>org.hornetq.core.remoting.impl.netty.NettyConnectorFactory</factory-class>
         <!-- In-VM based -->
         <!-- 
         <param key="use-invm" value="true"/>
         <param key="host" value="org.hornetq"/>
         -->
         
         <!-- Socket based -->
         <param key="host" value="localhost"/> <!-- If set to loop-back device ("localhost" or "127.0.0.1") cluster setup seems not to work  -->
         <param key="port" value="5445"/>
         <!-- <param key="use-nio" value="true"/> -->
      </connector>
      
      <!-- Connector to other server -->
      <!--
      <connector name="other-server-connector-@serverid@">
         <factory-class>org.hornetq.core.remoting.impl.netty.NettyConnectorFactory</factory-class>
         <param key="host" value="localhost"/>
         <param key="port" value="5446"/>
      </connector>
      -->
   </connectors>
   
   <!-- Acceptors -->
   <acceptors>
      <acceptor name="netty-acceptor">
         <factory-class>org.hornetq.core.remoting.impl.netty.NettyAcceptorFactory</factory-class>
         <!-- In-VM based -->
         <!-- 
         <param key="use-invm" value="true"/>
         <param key="host" value="org.hornetq"/>
         -->
         
         <!-- Socket based -->
         <param key="host" value="0.0.0.0"/>
         <param key="port" value="5445"/>
         <!-- <param key="use-nio" value="true"/> -->
      </acceptor>
   </acceptors>
   
   <!-- Clustering configuration -->
   <broadcast-groups>
      <broadcast-group name="ox-broadcast-group">
         <group-address>231.7.7.7</group-address>
         <group-port>9876</group-port>
         <broadcast-period>100</broadcast-period>
         <connector-ref>netty-connector</connector-ref>
     </broadcast-group>
   </broadcast-groups>
   
   <discovery-groups>
      <discovery-group name="ox-discovery-group">
         <group-address>231.7.7.7</group-address>
         <group-port>9876</group-port>
         <refresh-timeout>10000</refresh-timeout>
      </discovery-group>
   </discovery-groups>
   
   <cluster-connections>
      <cluster-connection name="ox-cluster">
         <address>jms</address>
         <connector-ref>netty-connector</connector-ref>
         <retry-interval>500</retry-interval>
         <use-duplicate-detection>true</use-duplicate-detection>
         <forward-when-no-consumers>true</forward-when-no-consumers>
         <max-hops>1</max-hops>
         
         <!-- Discovery here -->
         <discovery-group-ref discovery-group-name="ox-discovery-group"/>
         
         <!-- Static configuration -->
         <!--
         <static-connectors>
            <connector-ref>other-server-connector-@serverid@</connector-ref>
         </static-connectors>
         -->
         
      </cluster-connection>
   </cluster-connections>

   <grouping-handler name="ox-grouping-handler">
      <type>LOCAL</type>
      <address>jms</address>
      <timeout>5000</timeout>
   </grouping-handler>
   
   <!-- Other config -->
   <security-settings>
      <!--security for general-purpose queue-->
      <!--
      <security-setting match="jms.queue.genericQueue">
         <permission type="createDurableQueue" roles="guest"/>
         <permission type="deleteDurableQueue" roles="guest"/>
         <permission type="createNonDurableQueue" roles="guest"/>
         <permission type="deleteNonDurableQueue" roles="guest"/>
         <permission type="consume" roles="guest"/>
         <permission type="send" roles="guest"/>
      </security-setting>
      -->
   </security-settings>

</configuration>