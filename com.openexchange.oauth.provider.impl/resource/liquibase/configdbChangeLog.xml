<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="urn:liquibase"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:liquibase /liquibase/dbchangelog-3.0.xsd"
	logicalFilePath="com.openexchange.oauth.provider.db.migration/configdbChangeLog">

	<changeSet id="7.8.0:com.openexchange.oauth.provider.db.migration:oauthClient" author="thorben.betten@open-xchange.com">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="oauth_client" />
			</not>
		</preConditions>
		<comment>Creates the 'oauth_client' table</comment>
		<createTable tableName="oauth_client">
			<column name="id" type="varchar(64)">
				<constraints primaryKey="true" nullable="false" />
			</column>
		    <column name="secret" type="varchar(64)">
				<constraints nullable="false" />
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="description" type="TEXT">
        		<constraints nullable="true" primaryKey="false" unique="false"/>
      		</column>
			<column name="owner" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="contact_address" type="TEXT">
        		<constraints nullable="true" primaryKey="false" unique="false"/>
      		</column>
		</createTable>
	</changeSet>

	<changeSet id="7.8.0:com.openexchange.oauth.provider.db.migration:oauthClientUri" author="thorben.betten@open-xchange.com">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="oauth_client_uri" />
			</not>
		</preConditions>
		<comment>Creates the 'oauth_client_uri' table</comment>
		<createTable tableName="oauth_client_uri">
			<column name="id" type="varchar(64)">
				<constraints primaryKey="true" nullable="false" />
			</column>
		    <column name="uri" type="varchar(255)">
				<constraints primaryKey="true" nullable="false" />
			</column>
		</createTable>
	</changeSet>

</databaseChangeLog>
