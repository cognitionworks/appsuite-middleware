AJP_JVM_ROUTE=APP1
AJP_JVM_ROUTE_LONG="jkroute"
AJP_BIND_ADDR="*"
AJP_BIND_ADDR_LONG="ajpbindport"
CREDSRC="user.imapLogin"
CREDSRC_LONG="imapcredentials"
