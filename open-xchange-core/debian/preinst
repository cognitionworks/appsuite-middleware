#!/bin/bash
# preinst script for open-xchange-core
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


CONFFILES="outlook2003.de_DE.properties outlook2003.en_EN.properties outlook2003.fr_FR.properties outlook2003.nl_NL.properties"

case "$1" in
    install|upgrade)
        if dpkg --compare-versions "$2" lt "7.0.0-0"; then
            for FILE in ${CONFFILES}; do
                dpkg-divert --package open-xchange-core --add --rename --divert /opt/open-xchange/importCSV/${FILE}.dpkg-bak \
                    /opt/open-xchange/importCSV/${FILE}
            done
        fi
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/common/i18n.properties /opt/open-xchange/etc/i18n.properties \
    6.99.9 open-xchange-i18n -- $1 $(dpkg-query -W -f='${Config-Version}' open-xchange-i18n)
dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/mail-push.properties /opt/open-xchange/etc/mail-push.properties \
    6.99.9 open-xchange-push -- $1 $(dpkg-query -W -f='${Config-Version}' open-xchange-push)
dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/messaging.properties /opt/open-xchange/etc/messaging.properties \
    6.99.9 open-xchange-messaging -- $1 $(dpkg-query -W -f='${Config-Version}' open-xchange-messaging)
dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/secret.properties /opt/open-xchange/etc/secret.properties \
    6.99.9 open-xchange-secret -- $1 $(dpkg-query -W -f='${Config-Version}' open-xchange-secret)
dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/secrets /opt/open-xchange/etc/secrets \
    6.99.9 open-xchange-secret -- $1 $(dpkg-query -W -f='${Config-Version}' open-xchange-secret)
dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/threadpool.properties /opt/open-xchange/etc/threadpool.properties \
    6.99.9 open-xchange-threadpool -- $1 $(dpkg-query -W -f='${Config-Version}' open-xchange-threadpool)

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
