OXFUNCTIONS=@oxfunctions@
OXCONFIG=@oxscriptconf@


test -f $OXFUNCTIONS || {
    echo "missing common shell functions file"
    exit 1
}

. $OXFUNCTIONS

test -f $OXCONFIG && . $OXCONFIG

ox_set_JAVA_BIN

test -z "$JAVA_OXCMD_OPTS" && JAVA_OXCMD_OPTS="-Xmx280M"

JAVA_OPTS="${JAVA_OXCMD_OPTS} \
-Djava.awt.headless=true \
-Dopenexchange.propdir=$PROPERTIESDIR"

CLASSPATH="-classpath @classpath@"

umask 066
#######################
# Basic workflow
#######################
# 1) CreateSchema
# 2) mysql < dump
# 3) RestoreReference
#######################
usage() {
	echo "Usage: $0 [-h] [-m <source_schema> -t <target_cluster_id> -i <dump_file> -A <admin_user> -P <admin_pass> [-l <jmxLogin> -s <jmxPassword> [-p <jmxPort]]]"
	echo "  -A,--adminuser <admin_user>                 Admin username"
	echo "  -h                                          Prints a help text"
	echo "  -i,--in <dump_file>                         The dump file previously created with dumpschema"
	echo "  -l,--login <jmxLogin>                       The optional JMX login (if JMX authentication is enabled)"
	echo "  -m,--source-schema <source_schema>          Source schema name"
	echo "  -P,--adminpass <admin_pass>                 Admin password"
	echo "  -p,--port <jmxPort>                         The optional JMX port (default:9999)"
	echo "  -s,--password <jmxPassword>                 The optional JMX password (if JMX authentication is enabled)"
	echo "  -t,--target-cluster-id <target_cluster_id>  The target cluster identifier"
}

ARGS=`getopt -o i:m:t:hA:l:P:p:s: --long in:,source-schema:,target-cluster-id:,help,adminuser:,login:,adminpass:,port:,password: -n 'replayschema' -- "$@"`

if [ $? -ne 0 ]; then
	exit 1
fi

eval set -- "$ARGS"

if [ $# -lt 10 ]; then
        usage
        exit 1
fi

while true; do
	case "$1" in
		-h | --help)
			usage
			exit 0;;
		-m | --source-schema)
			case "$2" in
				"") shift 2;;
				*) schema=$2
					shift 2;;
			esac;;
		-t | --target-cluster-id)
			case "$2" in
				"") shift 2;;
				*) target=$2
					shift 2;;
			esac;;
		-i | --in)
			case "$2" in
				"") shift 2;;
				*) input=$2
					shift 2;;
			esac;;
		-A | --adminuser)
			case "$2" in
				"") shift 2;;
				*) adminuser=$2
					shift 2;;
			esac;;
		-P | --adminpass)
			case "$2" in
				"") shift 2;;
				*) adminpass=$2
					shift 2;;
			esac;;
		-l | --jmxLogin)
			case "$2" in
				"") shift 2;;
				*) jmxLogin=$2
					optJmxArgs="$optJmxArgs -l $jmxLogin"
					shift 2;;
			esac;;
		-s | --password)
			case "$2" in
				"") shift 2;;
				*) jmxPassword=$2
					optJmxArgs="$optJmxArgs -s $jmxPassword"
					shift 2;;
			esac;;
		-p | --port)
			case "$2" in
				"") jmxPort=9999 
					optJmxArgs="$optJmxArgs -p $jmxPort"
					shift 2;break;;
				*) jmxPort=$2
					optJmxArgs="$optJmxArgs -p $jmxPort"
					shift 2;;
			esac;;
		--)
			shift; break;;
		*)
			usage
			exit;;
	esac
done

# invoke create schema
OUTPUT="$(exec $JAVA_BIN $JAVA_OPTS $CLASSPATH com.openexchange.admin.console.schemamove.CreateSchema -A $adminuser -P $adminpass -t $target $optJmxArgs 2>&1)"
RETVAL=$?

# pump data in mysql
if [ $RETVAL -eq 0 ]; then
	targetSchema="$(echo $OUTPUT | awk '{print $1}')"
	echo -n "Pumping into schema '$targetSchema'"
	dumpOutput="$(mysql $OUTPUT < $input)"
	RETVAL=$?
	
	if [ $RETVAL -ne 0 ]; then
		echo "failed!\n"
		echo "Failed pumping data into schema '$targetSchema'... "
		exit $RETVAL;
	else 
		echo "done."
	fi
else
	echo -e "$OUTPUT"
	exit $RETVAL
fi

# restore configdb references
RESTORE="$(exec $JAVA_BIN $JAVA_OPTS $CLASSPATH com.openexchange.admin.console.schemamove.RestoreReference -A $adminuser -P $adminpass -m $schema -n $targetSchema -t $target $optJmxArgs 2>&1)"
RETVAL=$?
echo -e "$RESTORE"
exit $RETVAL