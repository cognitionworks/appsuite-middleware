    # on at least Debian Squeeze like systems, -i results in crap
    HCMD="hostname --all-ip-addresses"
    haddrs=( $($HCMD) )
    OXIP=${haddrs[0]}
else
    HCMD="hostname -i"
    OXIP=$($HCMD)
fi
if [ -z "$OXIP" ]; then
    die "unable to determine host ip using $HCMD, giving up."
