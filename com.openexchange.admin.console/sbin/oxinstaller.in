usage() {
    echo
    echo "$0 currently knows the following parameters:"
    echo
    local lopts=$(echo $LONGOPTS | sed -e 's/[:,]/ /g')
    printf '%-22s | %-45s | %-s\n' "Parameter" "Default value" "Possible values"
    echo "--------------------------------------------------------------------------------------------"
    for opt in $lopts; do
    local rvar=${opt%_LONG}
    GLOBIGNORE='*'
    local default="$(eval echo "$rvar")"
    local possible=$(eval echo ${opt%_LONG}_VALUES)
    local lopt=$(eval echo $opt)
        # echo $opt $rvar $default $lopt
    printf '%-22s | %-45s | %-s\n' "--$lopt" $default "$possible"
    GLOBIGNORE=
    done
cat<<EOF

Example:

  $0 --servername=ox6 --configdb-pass=secret --master-pass=secret --add-license=f-o-o-b-a-r

use -D for Debug mode

EOF
    echo
#    exit 1
}

v_setprop() {
    local prop="$1"
    local val="$2"
    local propfile="$3"
    if [ -f $3 ]; then 
    # echo setting $prop in $propfile
        echo -n .
        ox_set_property "$prop" "$val" "$propfile"
    else
    echo
        echo skipping configuration of $1 in $3
    fi
}

v_comment() {
    local prop="$1"
    local action="$2"
    local propfile="$3"
    if [ -f $3 ]; then
    # echo $action hash for $prop in $propfile
    echo -n .
    ox_comment "$prop" "$action" "$propfile"
    else
    echo
    echo skipping configuration of $i in $3
    fi
}

v_cache_hosting(){
    local propfile="$1"
    local cachename="$2"
    local cport="$3"

    v_comment jcs.auxiliary.${cachename}.attributes.TcpServers add $propfile
    v_comment jcs.auxiliary.${cachename}.attributes.UdpDiscoveryEnabled remove $propfile
    v_comment jcs.auxiliary.${cachename}.attributes.UdpDiscoveryAddr remove $propfile
    v_comment jcs.auxiliary.${cachename}.attributes.UdpDiscoveryPort remove $propfile
    v_comment jcs.auxiliary.${cachename}.attributes.TcpListenerPort remove $propfile
    v_setprop jcs.auxiliary.${cachename}.attributes.UdpDiscoveryEnabled true $propfile
    v_setprop jcs.auxiliary.${cachename}.attributes.UdpDiscoveryAddr $UDPDISCOVERYADDR $propfile 
    v_setprop jcs.auxiliary.${cachename}.attributes.UdpDiscoveryPort $cport $propfile
}

