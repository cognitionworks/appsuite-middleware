#!/bin/bash
# postinst script for open-xchange
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

export DPKG_DEBUG=1

dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/facebookmessaging.properties \
    /opt/open-xchange/etc/facebookmessaging.properties 6.99.9 open-xchange-messaging-facebook -- $1 \
    $(dpkg-query -W -f='${Config-Version}' open-xchange-messaging-facebook)
dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/rssmessaging.properties /opt/open-xchange/etc/rssmessaging.properties \
    6.99.9 open-xchange-messaging-rss -- $1 $(dpkg-query -W -f='${Config-Version}' open-xchange-messaging-rss)
dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/twittermessaging.properties \
    /opt/open-xchange/etc/twittermessaging.properties 6.99.9 open-xchange-messaging-twitter -- $1 \
    $(dpkg-query -W -f='${Config-Version}' open-xchange-messaging-twitter)
dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/twitter.properties /opt/open-xchange/etc/twitter.properties 6.99.9 \
    open-xchange-twitter -- $1 $(dpkg-query -W -f='${Config-Version}' open-xchange-twitter)

unset DPKG_DEBUG

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
