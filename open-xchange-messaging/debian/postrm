#!/bin/bash
# postrm script for open-xchange
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


CONFFILES="contacts_hcard_censored.tmpl contacts_hcard_uncensored.tmpl contacts_oxmf_censored.tmpl contacts_oxmf_uncensored.tmpl contacts.tmpl infostore.tmpl publish.microformats.properties"

case "$1" in
    remove|abort-install|disappear)
        for FILE in ${CONFFILES}; do
            dpkg-divert --package open-xchange-publish --remove --rename --divert /opt/open-xchange/templates/${FILE}.dpkg-bak \
                /opt/open-xchange/templates/${FILE}
            rm -f /opt/open-xchange/templates/${FILE}
        done
    ;;

    purge|upgrade|failed-upgrade|abort-upgrade)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/facebookmessaging.properties \
    /opt/open-xchange/etc/facebookmessaging.properties 6.99.9 open-xchange-messaging-facebook -- $1 \
    $(dpkg-query -W -f='${Config-Version}' open-xchange-messaging-facebook)
dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/rssmessaging.properties /opt/open-xchange/etc/rssmessaging.properties \
    6.99.9 open-xchange-messaging-rss -- $1 $(dpkg-query -W -f='${Config-Version}' open-xchange-messaging-rss)
dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/twittermessaging.properties \
    /opt/open-xchange/etc/twittermessaging.properties 6.99.9 open-xchange-messaging-twitter -- $1 \
    $(dpkg-query -W -f='${Config-Version}' open-xchange-messaging-twitter)
dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/twitter.properties /opt/open-xchange/etc/twitter.properties 6.99.9 \
    open-xchange-twitter -- $1 $(dpkg-query -W -f='${Config-Version}' open-xchange-twitter)

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
