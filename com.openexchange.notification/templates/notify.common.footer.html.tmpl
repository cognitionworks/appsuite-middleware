  <#if footer_text?has_content || footer_image_src?has_content>
  <hr />
    <div id="signature">
      <p id="signature_text">
        <#if footer_image_src?has_content>
          <img class="logo" id="signature_image" src="${footer_image_src}" style="display:inline;float:right;">
