<?xml version="1.0" encoding="UTF-8"?>
<project name="com.openexchange.subscribe.crawler overrides">

    <description>
        Patches the path in the crawler.properties configuration file before installing it.
    </description>

    <import file="build-project.xml"/>

    <!-- Constants -->
    <property name="patchConfDir" value="${tmpDir}/${confDir}"/>

    <target name="installConf">
        <copy todir="${destDir}/${confInstallDir}">
            <fileset dir="${confDir}" includes="crawlers/**"/>
        </copy>
    </target>

    <target name="postClean">
    	<if>
            <available file="${tmpDir}" type="dir"/>
            <then>
            	<delete dir="${tmpDir}"/>
            </then>
        </if>
    </target>

</project>
