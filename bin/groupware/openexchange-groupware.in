#!/bin/sh
#
# This script should start the open-xchange groupware part
# 
# Martin Kauss
#

cd @prefix@
export JAVA_HOME=@JAVA_HOME@
unset LS_COLORS
[ -f /etc/SuSE-release ] && SERVER=$(test "$HOSTTYPE" == "i386" && echo "-server")
OPTS=""

JAVA_OPTS="-ms20M -mx280M \
-Djava.awt.headless=true \
-Dopenexchange.propfile=@oxgroupwaresysconfdir@/system.properties \
-Djava.util.logging.config.file=@oxgroupwaresysconfdir@/logging.properties \
-DappName=groupwareApp \
-Djava.library.path=@oxlibdir@ \
-Dcom.sun.management.jmxremote"

CLASSPATH="-classpath \
@jdbcjar@:\
@mailjar@:\
@activationjar@:\
@jdomjar@:\
@jsdkjar@:\
@jcsjar@:\
@concurrentjar@:\
@loggingjar@:\
@jsonjar@:\
@fileuploadjar@:\
@iojar@:\
@webdavjar@:\
@httpclientjar@:\
@oxgroupwarelibdir@/nas.jar:\
@oxgroupwarelibdir@/comfiretools.jar:\
@oxgroupwarelibdir@/intranet.jar:\
@oxgroupwarelibdir@/webdav.jar:\
@oxgroupwarelibdir@/sessiond.jar:\
@oxgroupwarelibdir@/umin.jar:\
@oxgroupwarelibdir@/ajax.jar:\
@oxgroupwarelibdir@/webmail.jar:\
@oxuminsysconfdir@"

@JAVA@ $SERVER $JAVA_OPTS $OPTS $CLASSPATH ComfireServer

