<?xml version="1.0" encoding="UTF-8"?>
<project name="OXUpdater drive client override" basedir=".">

    <description>
        Prepares the OXDrive client binaries, templates and config files.
    </description>

    <import file="build-project.xml" />
	
    <property name="templatesDir" value="templates" />
    <property name="templateInstallDir" value="${prefix}/${templatesDir}" />
    

    <target name="postInstall">
        <antcall target="installTemplate" />
    </target>

    <target name="installTemplate">
        <mkdir dir="${destDir}/${templateInstallDir}" />
        <copy todir="${destDir}/${templateInstallDir}">
            <fileset dir="${patchTemplateDir}" />
        </copy>
    </target>

</project>
